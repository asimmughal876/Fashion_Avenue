@{
    ViewData["Title"] = "Blog";
}
@model Fashion_Avenue.Models.IndexModel

<section class="bg-title-page p-t-40 p-b-50 flex-col-c-m" style="background-image: url(/assets/images/heading-pages-05.jpg);">
    <h2 class="l-text2 t-center">
        Blog
    </h2>
</section>

<section class="bgwhite p-t-60">
    <div class="container">
        <div class="row">
            <div class="col-md-9 col-lg-10 p-b-75">
           

                <p class="fw-bold text-danger">@TempData["Blog_Mess"]</p>
                @foreach (var item in Model.Blog)
                {
                    <div class="p-r-50 p-r-0-lg">
                        <div class="item-blog p-b-80">
                            <a asp-controller="Home" asp-action="Blog_Detail" asp-route-id="@item.BId" class="item-blog-img pos-relative dis-block hov-img-zoom">
                                <img src="~/@item.BImage" alt="IMG-BLOG">
                                <span class="item-blog-date dis-block flex-c-m pos1 size17 bg4 s-text1">
                                    @{
                                        if (item.BDate.HasValue)
                                        {
                                            @item.BDate.Value.ToString("yyyy-MM-dd")
                                        }
                                        else
                                        {
                                            @String.Empty
                                        }
                                    }
                                </span>
                            </a>
                            <div class="item-blog-txt p-t-33">
                                <h4 class="p-b-11">
                                    <a asp-controller="Home" asp-action="Blog_Detail" asp-route-id="@item.BId" class="m-text24">
                                        @item.BTitle
                                    </a>
                                </h4>
                                <div class="s-text8 flex-w flex-m p-b-21">
                                    <span>
                                        By Admin
                                        <span class="m-l-3 m-r-6">|</span>
                                    </span>
                                    @{
                                        var commentCount = Model.BlogComment.Count(comment => comment.BlogId == item.BId);
                                    }
                                    <span>
                                        @commentCount Comment
                                    </span>
                                </div>
                                <p class="p-b-12"></p>
                                <a asp-controller="Home" asp-action="Blog_Detail" asp-route-id="@item.BId" class="s-text20">
                                    Read Description
                                    <i class="fa fa-long-arrow-right m-l-8" aria-hidden="true"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                }


            </div>
            </div>
        </div>
</section>
