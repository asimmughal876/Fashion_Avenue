@{
    ViewData["Title"] = "Contact";
}
@model Fashion_Avenue.Models.Contact

@if (TempData.ContainsKey("cont_mess"))
{
    var A_M = TempData["cont_mess"];
    <script>
        alert("@A_M");
    </script>
}

<section class="bg-title-page p-t-40 p-b-50 flex-col-c-m" style="background-image: url(/assets/images/heading-pages-06.jpg);">
    <h2 class="l-text2 t-center">Contact</h2>
</section>

<section class="bgwhite p-t-66 p-b-60">
    <div class="container">
        <div class="row">
            <div class="col-md-7 p-b-30 m-auto">
                <form class="leave-comment" method="post">
                    <h4 class="m-text26 p-b-36 p-t-15 text-center">Send us your message</h4>

                    @using System.Security.Claims;
                    @{
                        var userid = User.FindFirst(ClaimTypes.NameIdentifier)?.Value;
                        var uname = userid != null ? User.FindFirst(ClaimTypes.Name)?.Value : "";
                        var uemail = userid != null ? User.FindFirst(ClaimTypes.Email)?.Value : "";
                    }

                    <div class="bo4 of-hidden size15 m-b-20">
                        <input class="sizefull s-text7 p-l-22 p-r-22" value="@uname" type="text" asp-for="CName" required placeholder="Full Name">
                    </div>
                    <div class="bo4 of-hidden size15 m-b-20">
                        <input class="sizefull s-text7 p-l-22 p-r-22" value="@uemail" type="email" asp-for="CEmail" required placeholder="Email Address">
                    </div>
                    <textarea class="dis-block s-text7 size20 bo4 p-l-22 p-r-22 p-t-13 m-b-20" asp-for="CMess" required placeholder="Message"></textarea>

                    <div class="w-size25 d-flex m-auto">
                        <button class="flex-c-m size2 bg1 bo-rad-23 hov1 m-text3 trans-0-4 d-flex m-auto">
                            Send
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
