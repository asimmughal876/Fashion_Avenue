@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Update Product";
}
@model Fashion_Avenue.Models.Product
<section class="main_content dashboard_part">

    <div class="main_content_iner ">
        <div class="container-fluid plr_30 body_white_bg pt_30">
            <div class="row justify-content-center">
                <div class="col-lg-12">
                    <div class="box_header ">
                        <div class="main-title">
                            <h3 class="mb-0">Product Form</h3>
                        </div>
                    </div>
                    <div class="white_box mb_30">

                        <form method="post" enctype="multipart/form-data">
                            <div class="mb-3">
                                <input type="text" class="form-control" asp-for="PName" required placeholder="Product Name">
                                <input type="hidden" class="form-control" asp-for="PId" required placeholder="Product Name">

                            </div>

                            <p class="text-danger fw-bold">@TempData["Img_Mess"]</p>
                            <div class="input-group mb-3">

                                <input type="file" class="form-control" name="file">
                                <label class="input-group-text">Upload Image</label>
                                <input value="@Model.PImage" name="pr_img" type="hidden"/>
                            </div>
                            <img src="~/@Model.PImage" width="100" height="100" />

                            <div class="mb-3">
                                <input type="number" class="form-control" asp-for="PPrice" required placeholder="Product Price">
                            </div>
                            <div class="mb-3">
                                <p class="text-danger fw-bold">@TempData["Color_Mess"]</p>

                                <select class="form-select form-control-lg mb_30" asp-for="PColor" asp-items="ViewBag.ProdColorId" required>
                                    <option>Select Color</option>
                                </select>
                            </div>
                            <div class="mb-3">
                                <p class="text-danger fw-bold">@TempData["Catg_Mess"]</p>

                                <select class="form-select form-control-lg mb_30" asp-for="PCatgId" asp-items="ViewBag.ProdCatgId" required>
                                    <option>Select Category</option>
                                </select>
                            </div>
                            <div class="mb-3">
                                <button type="submit" class="btn d-flex m-auto" style="background-color:#E65540;color:white">SUBMIT</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>

